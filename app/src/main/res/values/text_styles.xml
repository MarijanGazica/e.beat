    <style name="Answer" parent="Text.Body1" />

    <style name="Choice">
        <item name="android:textAppearance">@style/Text.Body1</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Question">
        <item name="android:textAppearance">@style/Text.Headline6</item>
    </style>

    <style name="ReadingEntryDescription" parent="Text.Body1" />

</resources>
