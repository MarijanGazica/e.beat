<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:alpha="0"
            android:gravity="start"
            android:textAppearance="@style/Text.Body1"
            motion:layout_constraintEnd_toEndOf="@id/endGuide"
            motion:layout_constraintStart_toStartOf="@id/startGuide"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/userSet">
        <Constraint
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:alpha="1"
            android:gravity="start"
            android:textAppearance="@style/Text.Body1"
            motion:layout_constraintEnd_toEndOf="@id/endGuide"
            motion:layout_constraintStart_toStartOf="@id/startGuide"
            motion:layout_constraintTop_toBottomOf="@id/icon" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/userSet"
        motion:constraintSetStart="@+id/start"
        motion:duration="600" />

</MotionScene>
